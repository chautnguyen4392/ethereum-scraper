{
  "name": "ethereum-scraper",
  "version": "0.6.0",
  "description": "Ethereum Scraper (Mainly eth_getTransactionsByAccount)",
  "main": "index.js",
  "author": "Harsh Vakharia",
  "license": "MIT",
  "bin": {
    "ethereum-scraper": "./bin/ethereum-scraper",
    "ethereum-scraper-api": "./bin/ethereum-scraper-api"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/harshjv/ethereum-scraper.git"
  },
  "scripts": {
    "api": "PROCESS_TYPE=api node index.js",
    "scraper": "PROCESS_TYPE=scraper node index.js",
    "start": "node index.js",
    "docker:build-local": "docker build -t ethereum-api-local . --no-cache",
    "docker:run-local": "docker run --rm --name ethereum-api -p 8080:8080 --env-file .env.docker.local -d -it ethereum-api-local:latest",
    "docker:stop-local": "docker stop ethereum-api",
    "docker:log-local": "docker container logs -t ethereum-api",
    "lint": "standard --verbose",
    "flint": "npm run lint --fix"
  },
  "dependencies": {
    "@sentry/node": "^5.27.4",
    "bluebird": "^3.7.2",
    "compression": "^1.7.4",
    "dotenv": "^8.2.0",
    "ethers": "^5.0.32",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "helmet": "^3.21.2",
    "keccak": "^3.0.1",
    "lodash": "^4.17.21",
    "mongoose": "^5.10.14",
    "web3-eth-abi": "^1.3.0"
  },
  "devDependencies": {
    "standard": "^14.3.1"
  }
}
